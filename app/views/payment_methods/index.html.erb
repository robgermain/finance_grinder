
<table>
    <thead>
        <tr>
            <th scope="col">&nbsp;</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <%= @payment_methods.each_with_index do |payment_method, index| %>
            <tr>
                <td><%= index+1 %>.</td>
                <td><%= link_to payment_method.name, payment_methods_path(payment_method) %></td>
                <td>
                    <%= link_to 'Edit', edit_payment_method_url(payment_method) %>
                    <%= link_to 'Delete', payment_method_url(payment_method), method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Add Payment Method', new_payment_method_path %>
