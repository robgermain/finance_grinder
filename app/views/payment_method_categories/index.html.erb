<p id="notice"><%= notice %></p>

<h1>Payment Method Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_method_categories.each do |payment_method_category| %>
      <tr>
        <td><%= payment_method_category.name %></td>
        <td><%= link_to 'Show', payment_method_category %></td>
        <td><%= link_to 'Edit', edit_payment_method_category_path(payment_method_category) %></td>
        <td><%= link_to 'Destroy', payment_method_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

