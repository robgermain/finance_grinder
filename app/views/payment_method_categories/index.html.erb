
<table>
    <thead>
        <tr>
            <th scope="col">&nbsp;</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <%= @payment_method_categories.each_with_index do |payment_method_category, index| %>
            <tr>
                <td><%= index+1 %>.</td>
                <td><%= link_to payment_method_category.name, payment_method_categories_path(payment_method_category) %></td>
                <td>
                    <%= link_to 'Edit', edit_payment_method_category_url(payment_method_category) %>
                    <%= link_to 'Delete', payment_method_category_url(payment_method_category), method: :delete, data: {confirm: "Are you sure?"} %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Add Payment Method Category', new_payment_method_category_path %>
